<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="layout.LoginFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textViewTitelReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:text="Registrieren"
        android:textAlignment="center"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textViewEMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewName"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewTitelReg"
        android:layout_toStartOf="@+id/editTextEMail"
        android:text="E-Mail:"
        android:textAlignment="center"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextEMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textViewTitelReg"
        android:layout_toEndOf="@+id/textViewPasswort"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextEMail"
        android:layout_toStartOf="@+id/editTextEMail"
        android:text="Name:"
        android:textAlignment="center"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewName"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/editTextEMail"
        android:layout_toEndOf="@+id/textViewEMail"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textViewMartNr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextMartNr"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewName"
        android:layout_toStartOf="@+id/editTextName"
        android:text="Martkielnummer:"
        android:textAlignment="center"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextMartNr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textViewName"
        android:layout_toEndOf="@+id/textViewMartNr"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textViewPasswort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewMartNr"
        android:text="Passwort:"
        android:textAlignment="center"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextPasswort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewPasswort"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textViewMartNr"
        android:layout_toEndOf="@+id/textViewEMail"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttonReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPasswort"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="Registrieren" />

</LinearLayout>
